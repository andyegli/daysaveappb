<div class="row">
  <div class="col-md-6 offset-md-3">
    <div class="card shadow-sm">
      <div class="card-body p-4">
        <h1 class="text-center mb-4">Login</h1>
        <form action="/users/login" method="POST">
          <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input
              type="email"
              id="email"
              name="email"
              class="form-control"
              placeholder="Enter your email"
              required
            />
          </div>
          <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input
              type="password"
              id="password"
              name="password"
              class="form-control"
              placeholder="Enter your password"
              required
            />
          </div>
          <div class="mb-4 text-end">
            <a href="/users/forgot" class="text-decoration-none">Forgot Password?</a>
          </div>
          <div class="d-grid">
            <button type="submit" class="btn btn-primary">Login</button>
          </div>
        </form>
        
        <div class="social-login mt-4">
          <p class="text-center mb-3">Or login with</p>
          <div class="row g-2">
            <div class="col-4">
              <a href="/users/auth/google" class="btn btn-outline-danger w-100">
                <i class="fab fa-google"></i> Google
              </a>
            </div>
            <div class="col-4">
              <a href="/users/auth/facebook" class="btn btn-outline-primary w-100">
                <i class="fab fa-facebook-f"></i> Facebook
              </a>
            </div>
            <div class="col-4">
              <a href="/users/auth/microsoft" class="btn btn-outline-info w-100">
                <i class="fab fa-microsoft"></i> Microsoft
              </a>
            </div>
          </div>
          <div class="row g-2 mt-2">
            <div class="col-6">
              <a href="/users/auth/apple" class="btn btn-outline-dark w-100">
                <i class="fab fa-apple"></i> Apple
              </a>
            </div>
            <div class="col-6">
              <a href="/users/auth/twitter" class="btn btn-outline-info w-100">
                <i class="fab fa-x-twitter"></i> X
              </a>
            </div>
          </div>
        </div>
        
        <div class="mt-4 text-center">
          <p>Don't have an account? <a href="/users/register" class="text-decoration-none">Register</a></p>
        </div>
      </div>
    </div>
  </div>
</div>